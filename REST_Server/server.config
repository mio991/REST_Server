<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns="server.xsd">
  <host>
    <listener url="http://*:8080/" />
  </host>
  <plugins>
    <plugin name="mio991.REST.Plugins.UsersAndRights" loadTime="0">
      <assembly path=".\mio991.REST.Plugins.UsersAndRights.dll" />
      <!-- on Linux -->
      <!-- assembly path="mio991.REST.Plugins.UsersAndRights.dll" /-->
      <settings>
        <setting name="objectUser" value="object_user" />
        <setting name="user" value="user" />
      </settings>
    </plugin>
    <plugin name="mio991.REST.Plugins.Files" loadTime="1">
      <assembly path=".\mio991.REST.Plugins.Files.dll" />
      <!-- on Linux -->
      <!-- assembly path="mio991.REST.Plugins.Files.dll" /-->
      <settings>
        <setting name="saveDirectory" value="D:\mio991.REST.Plugins.Files\" />
        <setting name="resource" value="mio991.REST.Plugins.Files" />
        <setting name="mio991.REST.Plugins.UsersAndRightsPlugin" value="mio991.REST.Plugins.UsersAndRights" />
      </settings>
    </plugin>
  </plugins>
  <dataBase>
    <connector assembly="MySql.Data.dll" type="MySql.Data.MySqlClient.MySqlConnection" />
    <connectionString value="Server=localhost;Port=3306;Database=REST;Uid=rest;Pwd=rest;" />
  </dataBase>
</configuration>